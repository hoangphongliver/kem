    block booking-block
        .booking-block
            .container
                .title-block-booking 
                    .text Search
                    span.icon-close
                        span.line
                        span.line
                .form-inline-search
                    .block-location
                        .form-group.form-search-location
                            select.form-search-hotel(name="form-search-hotel")
                        .error-msg
                            span WHERE WOULD YOU LIKE TO GO?
                    .block-picker
                        .form-group
                            input(type="text", name="check-in", id="check-in", readonly)
                            span.icon-calendar
                        .form-group
                            input(type="text", name="check-out", id="check-out", readonly)
                            span.icon-calendar
                        .error-msg
                            span PLEASE SELECT YOUR CHECK-IN AND CHECK-OUT DATES
                    .block-number
                        mixin select(...values)
                                each value in values
                                    option(value=value)= value
                        .form-group.guest-select
                            select.numberOfRoom(nam="NumberOfRoom")
                            button.btn-search(type="submit") Search
                        .collapse-advanced
                            .row-select
                                .num-adult
                                    select.numberOfAdult(nam="NumberOAdult")
                                .num-child
                                    select.numberOfChild(nam="NumberOfChild")
                            .row-select-children
                                span.title Age of Children
                                .block-list-children
                .block-option
                    .title Option
                    .row
                        .type-code-block
                            select#CodeType(name="CodeType")
                        .block.code-block
                            input(type="text", placeholder="Code", name="CodeValue", id="CodeValue")
                        .block.promo-block
                            input(type="text", placeholder="Promotion Code", name="PromotionCode", id="PromotionCode")
                        a(href="#" data-target="#partner-destination-modal" data-toggle="modal" class="partner-info-modal-trigger") Partner Destinations
                    button.btn-search(type="submit") Search
            .show-sm-booking-block
                .container
                    span Where would you like to go?
                    span.icon-search
