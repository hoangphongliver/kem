header
    .top-header
        .container
            .row.mx-0
                .top-logo.col-xs-12.col-md-3.middle-xs
                    .logo
                        a(href="/", title="logo")
                            img(src= ("../../../assets/images/logo.png"), alt="Kempinski Logo")
                .top-slogan.col-xs-12.col-md-6.middle-xs.center-xs
                    .text-big
                        span KEMPINSKI HOTELS
                    .text-small
                        span A Constellation of Havens 
                .top-panel.col-xs-12.col-md-3
                    .top-panel-wrap
                        ul.top-panel-wrap-menu.end-xs
                            li.multy-language
                                .dropdown.open
                                    span.dropdown-toggle.icon-angle-down
                                        span.content English
                                    .dropdown-menu-block.center-xs
                                        include ../../mixins/list.pug
                                        +list('dropdown-menu', 'العربية', 'español', 'français', 'русский', '中文', 'Deutsch')
                            li.loginLink
                                a.login-link(href="#" title="Login")
                                    span.icon-user
                                    span.text-login Login
            .account-widget-desktop
                .link
                    a(href="#", title="My Account") My account
                    a(href="#", title="My Account") Need assistance ?
                .text
                    span.big Need something special for your upcoming stay?
                    span.small Access your upcoming trip to modify or cancel your booking.
                .login-options.login-wrapper
                    a.btn-default-outline(href="#", title="CREATE A NEW ACCOUNT") CREATE A NEW ACCOUNT
                    span Or
                    a.btn-default-outline(href="#", title="LOGIN TO YOUR ACCOUNT") LOGIN TO YOUR ACCOUNT
    .banner-header
        block banner-wrapper-inside-page
            .banner-wrapper
                .banner-wrapper-content
                    .banner-images-block-left
                        img(src="../../../assets/images/header/banner-header.jpg", alt="Banner Header")
                    .banner-images-block-right
                        .banner-images-block
                            .content-block
                                .images-cover
                                    img(src="../../../assets/images/header/destinations-map.jpg", alt="Desnitaion")
                                .content.overlay
                                    span.text(data-target="destination-map") OUR DESTINATIONS 
                        .banner-images-block
                            .content-block
                                .images-cover
                                    img(src="../../../assets/images/header/experience.jpg", alt="experience")
                                .content.overlay
                                    span.text(data-target="experience") Experience
                        .search-form
                            span HOW MAY WE ASSIST YOU ?
                        .banner-images-block
                            .content-block
                                .images-cover
                                    img(src="../../../assets/images/header/special-offers.jpg", alt="Offers")
                                .content.overlay
                                    span.text(data-target="offers") Offers
                        .banner-images-block
                            .content-block
                                .images-cover
                                    img(src="../../../assets/images/header/our-hotel.png", alt="Our Hotel")
                                .content.overlay
                                    span.text(data-target="our-hotel") Our Hotel               
        .menu-left
            .menu-left-content.delay
                span.menu-title Overview
                - var menus = [{text: 'special offers', link: '/special-offers', submenu: [{text: 'sub-2-1', link: '###'}, {text: 'sub-2-2', link: '###'}] }, {text: '#Kempinski Gallery', submenu: [{text: 'sub-2-1', link: '###'}, {text: 'sub-2-2', link: '###'}], link: '/guest-gallery'  }, {text: 'about us', link: '/about-us'}];
                ul.side-menu
                    each list in menus
                        li.side-list-lv-1
                            a(href=list.link)= list.text
                            span.icon-angle-down
                            if list.submenu
                                ul.sub-menu
                                    each listSub in list.submenu
                                        li.side-list-lv2
                                            a(href=listSub.link)= listSub.text
                ul.navigation-only-phone
                    li.multy-language
                        .dropdown.open
                            span.dropdown-toggle
                                span.content English
                                span.icon-angle-down
                            .dropdown-menu-block.center-xs
                                include ../../mixins/list.pug
                                +list('dropdown-menu', 'العربية', 'español', 'français', 'русский', '中文', 'Deutsch')
                    li.login-wrapper
                        a(title="Login", href="#") Login
                    li.resgiter-wrapper
                        a(title="Resgiter", href="#") Resgiter
                    
